.manageScroll
  // this wrapper is here to prevent the site from scrolling
  // when the nav overlay is showing
  +below(950px)
    height 100vh
    overflow auto


.page
  &__container
    //
  &__content
    .button 
      margin-top 1rem
      
      &:hover
        color white
    //
    &-padding
      padding 5rem 0 4rem 0

      +below(950px)
        padding 1rem 0 4rem 0

    a:hover
      color grape 
      text-decoration underline

.content
  padding-top 2rem

[class='content'] > * 
    margin-bottom 1.5rem
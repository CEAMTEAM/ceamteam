.nav
  &__layer
    background-color lighten(grape, 20%)

    &:after
      content: ''
      display block
      height 100px
      width 100%
      background-image linear-gradient(hsla(0, 0, 0%, .6), trans)
      position absolute
      top 80px
      left 0
      z-index -1

      +below(950px)
        display none

      +ie11()
        background-color lighten(grape, 10%)
        background-image none
        height 59px
        //z-index 2

    &.nav--active

      //transform translateY(-300%)
      background-color lighten(grape, 5%)
      // overflow-y scroll

      width  100vw
      position fixed

      // top 0px
      // left 0px
      // right 0px
      // bottom 0px

      overflow scroll

      z-index 1

      +below(950px)
        height 87vh

      &:after
        content: ''
        display block
        height 0px
        width 100%

      .nav__container
        display block
        padding-bottom 5rem

  &__container
    justify-content space-around
    position relative

    +below(950px)
      display none

    li
      list-style none

    a
      color white
      display inline-block
      font-size 1rem
      font-family: Condensed.font
      padding .5rem 1rem
      text-shadow 1px 1px 0 black
      width 100%

      +below(950px)
        width inherit

      &:hover
        background-color gold 
        color white


    .menu-item-has-children
      position relative

      &:hover
        background-color accent
        color white

        +below(950px)
          background-color transparent

        > a + .sub-menu,
        > a + .sub-menu .sub-menu
          color ltgrape
          display block
          background-color accent

          +below(950px)
            background-color transparent

      > a + .sub-menu .sub-menu a
        text-indent 1rem

      a
        width 100%
        height 100%

        +below(950px)
          width inherit

    .menu-item
      // li

    .sub-menu
      box-sizing border-box
      display none
      position absolute
      top 100%
      left 0
      z-index 10

      +below(950px)
        display block
        padding-left 1.5rem
        position relative

      a
        width 400px

        // +below(950px)
          // width 100%


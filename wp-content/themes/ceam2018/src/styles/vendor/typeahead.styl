.records {
    background: #f48f1e;
    background: #f79203;
    margin-bottom: 3rem;
    padding: 2em;
}
.records input {
    display: inline-block;
    width: 100%;
}
.twitter-typeahead {
    width: 100%;
}
.typeahead,
.tt-query,
.tt-hint {
    width: 100%;
    font-size: 2em;
    text-transform: uppercase;
}
.typeahead {
    background-color: #fff;
    color: #777dac;
    margin: 0;
}
.typeahead:focus {
    box-shadow: 0 1px 20px #777dac inset;
    color: #777dac;
}
.tt-query {
    -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
    -moz-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
    box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
}
.tt-hint {
    color: #f48f1e;
}
.tt-dropdown-menu {
    width: 100%;
}
.tt-suggestion.tt-is-under-cursor {
    background-color: #0097cf;
}
.tt-suggestion p {
    margin: 0;
}
.reportCard {
    position: relative;
    padding: 1em 0;
    box-shadow: 0 3px 1px #333;
    text-transform: none;
    width: 100%;
    box-shadow: inset 0px -1px 0px rgba(0, 0, 0, .1);
}
.reportCard p {
    color: #777dac;
}
.badge {
    display: inline-block;
    background: #777dac;
    margin-top: 1em;
    height: 2em;
    width: 2em;
    border-radius: 5em;
    text-decoration: none;
    text-align: center;
    border: 0.125em solid white;
    padding: 1em;

    box-shadow: 0 0 0 0.25em #777dac, 0 9px 1px #ccc;
    position: absolute;
    top: 5px;
    right: 1em;
}
.badge span {
    color: white;
    display: inline-block;
    font-family: helvetica;
    font-size: 1.25em;
    
    line-height: 1.5;
    text-shadow: 0 -1px 1px #333;
}
h6.reportCard__item {
    color: #777dac;
    text-shadow: 0 -1px 0 #fff;
    letter-spacing: 1px;
    position: relative;
    padding: 0 0.5em;
    text-transform: capitalize;
}
.reportCard__itemTitle {
    display: inline-block;
    text-transform: uppercase;
    color: #333;
    width: 80px;
    margin-right: 1rem;
}
.si-reportCard {
    box-sizing: border-box;
    position: relative;
    padding: 1em;
    box-shadow: 0 3px 1px #333;
    text-transform: none;
    width: 100%;
    box-shadow: inset 0px -10px 0px #777dac;
    background: linear-gradient(to bottom, #1e5799 0%, #fffccc 0%, #edeac0 100%);
}
.si-reportCard p {
    color: #777dac;
}
.si-reportCard > div {
    overflow: hidden;
}
.si-reportCard > div:nth-child(odd) {
    background-color: rgba(119, 125, 172, 0.1);
}
.si-term {
    display: block;
    font-weight: bold;
    text-align: right;
    float: left;
    width: 40%;
}
.si-desc {
    display: block;
    float: left;
    padding-left: 1em;
    width: 40%;
}
h6.si-reportCard__item {
    color: #777dac;
    text-shadow: 0 -1px 0 #fff;
    letter-spacing: 1px;
    position: relative;
    padding: 0 0.5em;
    text-transform: capitalize;
}
.si-reportCard__itemTitle {
    display: inline-block;
    text-transform: uppercase;
    color: #333;
    width: 80px;
    margin-right: 1rem;
}
.lineTitle {
    display: inline-block;
    font-family: serif;
    font-size: 1em;
    font-weight: 100;
    padding: 0 0.25em;
    text-transform: uppercase;
    text-shadow: 0 -1px 0 #fff;
    letter-spacing: 1px;
    position: relative;
    padding: 0 0.5em;
    text-transform: none;
}
.lineTitle span {
    color: #aaa;
}
.lineTitle span:before,
.lineTitle span:after {
    content: "";
    position: absolute;
    /*border-bottom: 1px solid #ccc;*/
    
    height: 0.25em;
    border-top: 1px solid #ccc;
    top: 50%;
    width: 150px;
}
.lineTitle span:before {
    right: 100%;
    margin-right: 0.5em;
}
.lineTitle span:after {
    left: 100%;
    margin-left: 0.5em;
}